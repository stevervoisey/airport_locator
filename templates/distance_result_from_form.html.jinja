{% extends "layout.html" %}
{% block content %}
   <div class="home">
        <h1>Nearest Airport</h1>

        <p><a href="{{ url_for('map', latitude=nearest.destination_latitude, longitude=nearest.destination_longitude) }}">
        {{ nearest.destination_name }} </a> ({{ nearest.destination_code}}) is the nearest airport.</p>
        <p>( {{ nearest.destination_latitude }}, {{ nearest.destination_longitude }} )</p>
        <p>distance: {{ '%0.2f'|format(nearest.distance|float) }} km</p>
        <p class="highlight">From Position</p>

        <p>( {{ nearest.source_latitude }}, {{ nearest.source_longitude }} )</p>
        <br class="clear" />
   </div>
{% endblock %}

